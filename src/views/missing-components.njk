{% extends "layout.njk" %}
{% from "components/pagination.njk" import pagination %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% set allPages = [
  { path: "/", title: "Home" },
  { path: "/second-page", title: "Second Page" },
  { path: "/third-page", title: "Third Page" },
  { path: "/form-components", title: "Form Components" },
  { path: "/layout-components", title: "Layout Components" },
  { path: "/feedback-components", title: "Feedback Components" },
  { path: "/missing-components", title: "Additional Components" }
] %}

{% set currentPagePath = "/missing-components" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Additional Components</h1>
      <p class="govuk-body">This page demonstrates additional GOV.UK components not shown on other pages.</p>

      {{ govukBackLink({
        text: "Back",
        href: "/"
      }) }}

      <h2 class="govuk-heading-m">Form Components</h2>

      {{ govukInput({
        label: {
          text: "What is the name of the event?"
        },
        hint: {
          text: "The name you'll use on promotional material"
        },
        id: "event-name",
        name: "event-name"
      }) }}

      {{ govukSelect({
        label: {
          text: "Where do you live?"
        },
        id: "select-1",
        name: "select-1",
        items: [
          {
            value: "england",
            text: "England"
          },
          {
            value: "scotland",
            text: "Scotland"
          },
          {
            value: "wales",
            text: "Wales"
          },
          {
            value: "northern-ireland",
            text: "Northern Ireland"
          }
        ]
      }) }}

      {{ govukTextarea({
        label: {
          text: "Can you provide more detail?"
        },
        hint: {
          text: "Do not include personal or financial information, like your National Insurance number or credit card details."
        },
        id: "more-detail",
        name: "more-detail",
        rows: "5",
        maxlength: 500,
        countMessage: {
          text: "You have 500 characters remaining"
        }
      }) }}

      {{ govukInput({
        label: {
          text: "Full name"
        },
        id: "full-name",
        name: "full-name",
        errorMessage: {
          text: "Enter your full name"
        },
        classes: "govuk-input--error"
      }) }}

      {{ govukFieldset({
        legend: {
          text: "What is your address?",
          classes: "govuk-fieldset__legend--l",
          isPageHeading: true
        }
      }) }}
      {{ govukInput({
        label: {
          text: "Address line 1"
        },
        id: "address-line-1",
        name: "address-line-1",
        autocomplete: "address-line1"
      }) }}
      {{ govukInput({
        label: {
          text: "Address line 2 (optional)"
        },
        id: "address-line-2",
        name: "address-line-2",
        autocomplete: "address-line2"
      }) }}

      <h2 class="govuk-heading-m">Task List</h2>
      <div class="govuk-task-list">
        <h2 class="govuk-task-list__section">
          <span class="govuk-task-list__section-number">1. </span> Check before you start
        </h2>
        <ul class="govuk-task-list__items">
          <li class="govuk-task-list__item">
            <span class="govuk-task-list__task-name">
              <a href="#" class="govuk-link govuk-task-list__link" aria-describedby="company-information-status">
                Company information
              </a>
            </span>
            <strong class="govuk-tag govuk-task-list__tag" id="company-information-status">Completed</strong>
          </li>
        </ul>
      </div>

      {{ pagination(allPages, currentPagePath) }}
    </div>
  </div>
{% endblock %}
