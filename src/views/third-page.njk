{% extends "layout.njk" %}
{% from "components/pagination.njk" import pagination %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}

{% set allPages = [
  { path: "/", title: "Home" },
  { path: "/second-page", title: "Second Page" },
  { path: "/third-page", title: "Third Page" },
  { path: "/form-components", title: "Form Components" },
  { path: "/layout-components", title: "Layout Components" },
  { path: "/feedback-components", title: "Feedback Components" },
  { path: "/missing-components", title: "Additional Components" }
] %}

{% set currentPagePath = "/third-page" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">{{ message }}</p>

      <h2 class="govuk-heading-m">New Components</h2>

      {{ govukAccordion({
        id: "accordion-default",
        items: [
          {
            heading: {
              text: "Writing well for the web"
            },
            content: {
              html: "<p class='govuk-body'>This is the content for Writing well for the web.</p>"
            }
          },
          {
            heading: {
              text: "Writing well for specialists"
            },
            content: {
              html: "<p class='govuk-body'>This is the content for Writing well for specialists.</p>"
            }
          }
        ]
      }) }}

      {{ govukTabs({
        items: [
          {
            id: "past-day",
            label: "Past day",
            panel: {
              html: "<h2 class='govuk-heading-l'>Past day</h2><p class='govuk-body'>Content for past day</p>"
            }
          },
          {
            id: "past-week",
            label: "Past week",
            panel: {
              html: "<h2 class='govuk-heading-l'>Past week</h2><p class='govuk-body'>Content for past week</p>"
            }
          },
          {
            id: "past-month",
            label: "Past month",
            panel: {
              html: "<h2 class='govuk-heading-l'>Past month</h2><p class='govuk-body'>Content for past month</p>"
            }
          }
        ]
      }) }}

      {{ pagination(allPages, currentPagePath) }}
    </div>
  </div>
{% endblock %} 