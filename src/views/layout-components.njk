{% extends "layout.njk" %}
{% from "components/pagination.njk" import pagination %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set allPages = [
  { path: "/", title: "Home" },
  { path: "/second-page", title: "Second Page" },
  { path: "/third-page", title: "Third Page" },
  { path: "/form-components", title: "Form Components" },
  { path: "/layout-components", title: "Layout Components" },
  { path: "/feedback-components", title: "Feedback Components" },
  { path: "/missing-components", title: "Additional Components" }
] %}

{% set currentPagePath = "/layout-components" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">{{ message }}</p>

      <h2 class="govuk-heading-m">Layout Components</h2>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
          {{ govukPanel({
            titleText: "Application complete",
            html: "Your reference number<br><strong>HDJ2123F</strong>",
            classes: "govuk-panel--confirmation"
          }) }}
        </div>
        <div class="govuk-grid-column-one-half">
          {{ govukPhaseBanner({
            tag: {
              text: "alpha"
            },
            html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
          }) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ govukBreadcrumbs({
            items: [
              {
                text: "Home",
                href: "/"
              },
              {
                text: "Form components",
                href: "/form-components"
              },
              {
                text: "Layout components",
                href: "/layout-components"
              }
            ]
          }) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <div class="govuk-card">
            <div class="govuk-card__content">
              <h3 class="govuk-heading-m">Card component</h3>
              <p class="govuk-body">This is a card component example.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ govukTable({
            caption: "Table example",
            captionClasses: "govuk-table__caption--m",
            head: [
              {
                text: "Name"
              },
              {
                text: "Status"
              }
            ],
            rows: [
              [
                {
                  text: "Item 1"
                },
                {
                  text: "Active"
                }
              ],
              [
                {
                  text: "Item 2"
                },
                {
                  text: "Inactive"
                }
              ]
            ]
          }) }}
        </div>
      </div>

      {{ pagination(allPages, currentPagePath) }}
    </div>
  </div>
{% endblock %} 