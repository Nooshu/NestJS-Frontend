{% extends "layout.njk" %}
{% from "components/pagination.njk" import pagination %}

{% set allPages = [
  { path: "/", title: "Home" },
  { path: "/second-page", title: "Second Page" },
  { path: "/third-page", title: "Third Page" },
  { path: "/form-components", title: "Form Components" },
  { path: "/layout-components", title: "Layout Components" },
  { path: "/feedback-components", title: "Feedback Components" },
  { path: "/missing-components", title: "Additional Components" }
] %}

{% set currentPagePath = "/" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">{{ message }}</p>
      
      <h2 class="govuk-heading-m">Pages</h2>
      <ul class="govuk-list">
        <li>
          <a class="govuk-link" href="/second-page">Second Page</a>
        </li>
        <li>
          <a class="govuk-link" href="/third-page">Third Page</a>
        </li>
      </ul>

      <h2 class="govuk-heading-m">Component Examples</h2>
      <ul class="govuk-list">
        <li>
          <a class="govuk-link" href="/form-components">Form Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/layout-components">Layout Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/feedback-components">Feedback Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/missing-components">Missing Components</a>
        </li>
      </ul>

      <h2 class="govuk-heading-m">Components on this page</h2>
      <p class="govuk-body">This page demonstrates the following GOV.UK components:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>Header</li>
        <li>Footer</li>
        <li>Button</li>
        <li>Warning text</li>
        <li>Tag</li>
        <li>Details</li>
        <li>Inset text</li>
      </ul>

      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          This is a warning message
        </strong>
      </div>

      <div class="govuk-inset-text">
        This is an inset text component
      </div>

      <div class="govuk-button-group">
        <button class="govuk-button" data-module="govuk-button">
          Save and continue
        </button>
        <button class="govuk-button govuk-button--secondary" data-module="govuk-button">
          Find address
        </button>
      </div>

      <hr class="govuk-section-break govuk-section-break--visible">

      <h2 class="govuk-heading-m">Navigation</h2>
      <ul class="govuk-list">
        <li>
          <a href="/second-page" class="govuk-link">Go to second page</a>
        </li>
        <li>
          <a href="/third-page" class="govuk-link">Go to third page</a>
        </li>
      </ul>

      {{ pagination(allPages, currentPagePath) }}
    </div>
  </div>
{% endblock %} 