{% extends "layout.njk" %}
{% from "components/pagination.njk" import pagination %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set allPages = [
  { path: "/", title: "Home" },
  { path: "/second-page", title: "Second Page" },
  { path: "/third-page", title: "Third Page" },
  { path: "/form-components", title: "Form Components" },
  { path: "/layout-components", title: "Layout Components" },
  { path: "/feedback-components", title: "Feedback Components" },
  { path: "/missing-components", title: "Additional Components" }
] %}

{% set currentPagePath = "/" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">{{ message }}</p>

      {{ govukPanel({
        titleText: "Try our new journey",
        html: "Experience our new user journey with improved form handling"
      }) }}

      <div class="govuk-button-group govuk-!-margin-top-4">
        {{ govukButton({
          text: "Start new journey",
          href: "/new-journey",
          isStartButton: true
        }) }}
      </div>

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      <h2 class="govuk-heading-m">Components on this page</h2>
      <p class="govuk-body">This page demonstrates the following GOV.UK components:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>Header</li>
        <li>Footer</li>
        <li>Button</li>
        <li>Warning text</li>
        <li>Tag</li>
        <li>Details</li>
        <li>Inset text</li>
      </ul>

      <h2 class="govuk-heading-m">Other Component Examples</h2>
      <ul class="govuk-list">
        <li>
          <a class="govuk-link" href="/form-components">Form Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/layout-components">Layout Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/feedback-components">Feedback Components</a>
        </li>
        <li>
          <a class="govuk-link" href="/missing-components">Missing Components</a>
        </li>
      </ul>

      {{ govukWarningText({
        text: "This is a warning message",
        iconFallbackText: "Warning"
      }) }}

      {{ govukInsetText({
        text: "This is an inset text component"
      }) }}

      <div class="govuk-button-group">
        {{ govukButton({
          text: "Save and continue",
          attributes: {
            "data-module": "govuk-button"
          }
        }) }}
        {{ govukButton({
          text: "Find address",
          classes: "govuk-button--secondary",
          attributes: {
            "data-module": "govuk-button"
          }
        }) }}
      </div>

      <hr class="govuk-section-break govuk-section-break--visible">

      {{ pagination(allPages, currentPagePath) }}
    </div>
  </div>
{% endblock %} 