{% if href %}
  <a
    href="{{ href }}"
    role="button"
    draggable="false"
    class="govuk-button{%- if classes %} {{ classes }}{% endif %}{%- if isStartButton %} govuk-button--start{% endif %}"
    data-module="govuk-button"
    {%- if name %} name="{{ name }}"{% endif %}
    {%- if type %} type="{{ type }}"{% endif %}
    {%- if value %} value="{{ value }}"{% endif %}
    {%- if preventDoubleClick is defined %} data-prevent-double-click="{{ preventDoubleClick | string | lower }}"{% endif %}
    {%- if disabled %} disabled="disabled" aria-disabled="true"{% endif %}
    {%- if attributes %}{%- for attribute, value in attributes %} {{attribute}}="{{value}}"{% endfor %}{%- endif %}
    {%- if target %} target="{{ target }}"{% endif %}
    {%- for attribute, value in dataset %} data-{{ attribute }}="{{ value }}"{% endfor %}>
    {{ text | default(html) | safe }}
    {%- if isStartButton %}
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
      </svg>
    {%- endif %}
  </a>
{% elseif element == 'input' or isInput %}
  <input
    value="{{ text | safe }}"
    type="{{ type | default('submit') }}"
    {%- if name %} name="{{ name }}"{% endif %}
    {%- if disabled %} disabled aria-disabled="true"{% endif %}
    class="govuk-button{%- if classes %} {{ classes }}{% endif %}"
    data-module="govuk-button"
    {%- if preventDoubleClick is defined %} data-prevent-double-click="{{ preventDoubleClick | string | lower }}"{% endif %}
    {%- if attributes %}{%- for attribute, value in attributes %} {{attribute}}="{{value}}"{% endfor %}{%- endif %}
    {%- for attribute, value in dataset %} data-{{ attribute }}="{{ value }}"{% endfor %}>
{% else %}
  <button
    type="{{ type | default('submit') }}"
    {%- if name %} name="{{ name }}"{% endif %}
    {%- if disabled %} disabled aria-disabled="true"{% endif %}
    class="govuk-button{%- if classes %} {{ classes }}{% endif %}{%- if isStartButton %} govuk-button--start{% endif %}"
    data-module="govuk-button"
    {%- if preventDoubleClick is defined %} data-prevent-double-click="{{ preventDoubleClick | string | lower }}"{% endif %}
    {%- if attributes %}{%- for attribute, value in attributes %} {{attribute}}="{{value}}"{% endfor %}{%- endif %}
    {%- for attribute, value in dataset %} data-{{ attribute }}="{{ value }}"{% endfor %}>
    {{ text }}
    {%- if isStartButton %}
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
      </svg>
    {%- endif %}
  </button>
{% endif %}