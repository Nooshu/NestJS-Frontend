{% if element == 'a' or href %}
<a href="{{ href or '/' }}" role="button" draggable="false" class="govuk-button{% if classes %} {{ classes }}{% endif %}{% if disabled %} govuk-button--disabled{% endif %}{% if isStartButton %} govuk-button--start{% endif %}"{% if name %} name="{{ name }}"{% endif %}{% if type %} type="{{ type }}"{% endif %}{% if value %} value="{{ value }}"{% endif %} data-module="govuk-button">
  {{ text }}
  {% if isStartButton %}
  <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
  </svg>
  {% endif %}
</a>
{% elif element == 'input' %}
<input class="govuk-button{% if classes %} {{ classes }}{% endif %}{% if disabled %} govuk-button--disabled{% endif %}"{% if disabled %} disabled="disabled" aria-disabled="true"{% endif %}{% if name %} name="{{ name }}"{% endif %} type="{{ type or 'submit' }}"{% if value %} value="{{ value }}"{% else %} value="{{ text }}"{% endif %} data-module="govuk-button">
{% else %}
<button class="govuk-button{% if classes %} {{ classes }}{% endif %}{% if disabled %} govuk-button--disabled{% endif %}{% if isStartButton %} govuk-button--start{% endif %}"{% if disabled %} disabled="disabled" aria-disabled="true"{% endif %}{% if name %} name="{{ name }}"{% endif %}{% if type %} type="{{ type }}"{% endif %}{% if value %} value="{{ value }}"{% endif %} data-module="govuk-button">
  {{ text }}
  {% if isStartButton %}
  <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
  </svg>
  {% endif %}
</button>
{% endif %} 