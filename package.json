{
  "name": "nest-frontend",
  "version": "1.0.0",
  "description": "NestJS application with GOV.UK Frontend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:scss": "sass node_modules/govuk-frontend/govuk/all.scss src/public/govuk/all.css",
    "build": "npm run build:scss && nest build && cp -r src/views/* dist/views/",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run build:scss && NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "govuk-frontend": "^4.7.0",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.3.1",
    "@types/nunjucks": "^3.2.6",
    "jest": "^29.7.0",
    "node-html-parser": "^6.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  }
}
