{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": false,
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test-output",
    "tests-examples",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/test/**/*",
    "tests/**/*"
  ]
}
